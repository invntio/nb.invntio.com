---
import { Icon } from 'astro-icon/components'

const features = [
  {
    icon: 'group',
    title: 'Gestión Integral de Usuarios',
    ref: '#startnow',
    refTitle: 'Pruébalo ahora',
    description: 'Controla los accesos de tu condominio con facilidad',
  },
  {
    icon: 'round-payments',
    title: 'Automatización de Pagos',
    ref: '#startnow',
    refTitle: 'Pruébalo ahora',
    description: 'Simplifica tus cobros con facturación automática y segura.',
  },
  {
    icon: 'round-warning',
    title: 'Seguimiento de Incidencias',
    ref: '#startnow',
    refTitle: 'Pruébalo ahora',
    description: 'Registra, organiza y resuelve incidencias y tareas diarias',
  },
  {
    icon: 'round-bar-chart',
    title: 'Informes Financieros Claros',
    ref: '#startnow',
    refTitle: 'Pruébalo ahora',
    description: 'Obtén reportes financieros precisos y listos al instante.',
  },
];


---

<!-- ====== Features Section Start -->
<section class="pt-20 pb-8 lg:pt-[120px] lg:pb-[70px] dark:bg-dark" id="features">
  <div class="container">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mb-12 mx-auto max-w-[485px] lg:mb-[70px] text-center">
          <span class="mb-2 block text-lg font-semibold text-blue-500">
            Características
          </span>
          <h2 class="mb-3 text-3xl font-bold text-dark dark:text-white sm:text-4xl md:text-[40px] md:leading-[1.2]">
            Todo lo que necesitas, en un solo lugar
          </h2>
          <p class="text-base text-body-color dark:text-dark-6">
            Neighbor te ofrece todas las herramientas esenciales para 
            gestionar tu condominio de manera eficiente y efectiva.
          </p>
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap">
      {
        features.map((feature) => (
          <div class="w-full px-4 md:w-1/2 lg:w-1/4">
            <div class="wow fadeInUp group mb-12" data-wow-delay=".1s">
              <div
                class="relative z-10 mb-10 flex h-[70px] w-[70px] items-center justify-center rounded-[14px] bg-primary"
              >
                <span
                  class="absolute top-0 left-0 -z-[1] mb-8 flex h-[70px] w-[70px] rotate-[25deg] items-center justify-center rounded-[14px] bg-primary bg-opacity-20 duration-300 group-hover:rotate-45"
                ></span>
                <Icon name={`ic:${feature.icon}`} class="text-5xl text-white" />
              </div>
              <h4 class="mb-3 text-xl font-bold text-dark dark:text-white">
                {feature.title}
              </h4>
              <p class="mb-6 md:mb-8 text-body-color dark:text-dark-6 lg:mb-9">
                {feature.description}
              </p>
              <a
                href={feature.ref}
                class="text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary"
              >
                {feature.refTitle}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<!-- ====== Features Section End -->